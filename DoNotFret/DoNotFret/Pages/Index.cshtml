@page
@model DoNotFret.Pages.IndexModel
@{
}

<h1 class="mainTitleText">User Home</h1>
@if (User.Identity.IsAuthenticated)
{<h1 class="mainTitleText">Welcome @ViewData["username"]</h1>}

<div id="link-container">
	<a class="navLinks" asp-page="/Index">Home</a>
	@if (User.Identity.IsAuthenticated)
	{
		<a class="navLinks" asp-controller="Auth" asp-action="Logout">Sign Out</a>
		<div class="categories-container">
		@foreach(var Category in Model.Categories)
        {
			<form method="get">
				<input type="hidden" name="category" value=@Category.Name/>
				<button class="listButton "type="submit">@Category.Name</button>
			</form>
        }
		</div>
	}
	@if (User.Identity.IsAuthenticated == false)
	{
		<a class="navLinks" href="/userlogin">Sign In</a>
		<a class="navLinks" href="/usersignup">Register</a>
		<a class="navLinks" asp-controller="Home" asp-action="HomeIndex">Admin Page</a>

		<div class="categories-container">
		@foreach(var Category in Model.Categories)
        {
			<form method="get">
				<input type="hidden" name="category" value=@Category.Name/>
				<button class="listButton "type="submit">@Category.Name</button>
			</form>
        }
		</div>
	}
	@if (User.Identity.IsAuthenticated)
	{
		<a class="navLinks" asp-controller="Home" asp-action="HomeIndex">Admin Page</a>
	}
	<!--<select asp-for"Input.Mode" asp-items="Html.GetEnumSelectList<ColorScheme>()"</select> -->
</div>

@if (Model.Instruments != null && Model.isFiltered == false)
{
	<div id="cardContainer">
		@foreach (var inst in Model.Instruments)
		{
			<div class="list-element">
				<form method="post">
					<h4 id="list-title">@inst.InstrumentType</h4>
					<ul>
						<li class="list-items">@inst.Brand</li>
						<li class="list-items">@inst.Material</li>
						<li class="list-items">@inst.Description</li>
					</ul>
					<input asp-for="Input.Id" type="hidden" name="Id" value="@inst.Id" />
					@if (User.Identity.IsAuthenticated && inst.HasBeenAdded == false)
					{
						<button class="listButton" type="submit">Add to Cart</button>
					}
					else if (User.Identity.IsAuthenticated && inst.HasBeenAdded == true)
					{
						<p>Item added to cart</p>
					}
					else
					{
						<p>Log in to add items to your cart</p>
					}
					<br />
				</form>
			</div>
		}
	</div>
}

else if (Model.isFiltered == true)
	{
	<div id="cardContainer">
		@foreach (var inst in Model.Filtered)
		{
			<div class="list-element">
				<form method="post">
					<h4 id="list-title">@inst.InstrumentType</h4>
					<ul>
						<li class="list-items">@inst.Brand</li>
						<li class="list-items">@inst.Material</li>
						<li class="list-items">@inst.Description</li>
					</ul>
					<input asp-for="Input.Id" type="hidden" name="Id" value="@inst.Id" />
					@if (User.Identity.IsAuthenticated && inst.HasBeenAdded == false)
					{
						<button id="listButton" type="submit">Add to Cart</button>
					}
					else if (User.Identity.IsAuthenticated && inst.HasBeenAdded == true)
					{
						<p>Item added to cart</p>
					}
					else
					{
						<p>Log in to add items to your cart</p>
					}
					<br />
				</form>
			</div>
		}
	</div>
		
    }